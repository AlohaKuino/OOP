   <children>
      <Button fx:id="startGameButton" onAction="#onStartGameButtonClick" layoutX="261.0" layoutY="200.0" mnemonicParsing="false" text="Start Game" />
      <SplitMenuButton layoutX="232.0" layoutY="251.0" mnemonicParsing="false" text="Select Game Level">
        <items>
          <MenuItem fx:id="action1MenuItem" onAction="#onAction1MenuItemClick" mnemonicParsing="false" text="Easy" />
          <MenuItem fx:id="action2MenuItem" onAction="#onAction2MenuItemClick" mnemonicParsing="false" text="Medium" />
        </items>
      </SplitMenuButton>
   </children>
</AnchorPane>
